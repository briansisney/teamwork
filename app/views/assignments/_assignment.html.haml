%tr{:class => row_color(assignment.end_time)}
  %td= assignment.user.name
  %td= assignment.client.name
  %td= assignment.role.name
  %td= readable_date(assignment.start_date)
  %td= readable_date(assignment.end_time)
  %td= link_to 'Show', assignment
  %td= link_to 'Edit', edit_assignment_path(assignment)
  %td= link_to 'Destroy', assignment, :method => :delete, :data => { :confirm => 'Are you sure?' }