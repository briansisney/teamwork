.row
  .col-md-1
    %h1.fa.fa-briefcase
    / image_proof(@client.image)
  .col-md-10
    =render 'clientname', client: @client
    .edit_name
      %i.fa.fa-pencil{"data-toggle" => "modal", "data-target" => "#updateClientModal"}
      


.row
  .col-md-6
    %h4 Current Assignments
    %table.table.table-condensed
      %tr
        %th User
        %th Role
        %th Start date
        %th End time
        %th
      
      - @client.assignments.each do |assignment|
        =render "clients/assignment", assignment: assignment    
  .col-md-6
    %h4 Make Assignment
    =render 'clients/assignmentform' 
  

=render 'clients/updateclientmodal'
= link_to 'Back', clients_path
