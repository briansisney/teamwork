= form_for @assignment, remote: true do |assign|
  - if @assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment.errors.count, "error")} prohibited this assignment from being saved:"
      %ul
        - @assignment.errors.full_messages.each do |msg|
          %li= msg

  .field
  
    = assign.label :user
    / = assign.text_field :user
    
    -@users.each do |user|
      .user_form_wrapper
        =user.name
        = assign.radio_button(:user_id, user.id, :class => "form_button")
    =link_to("New User", users_path, :class => "user_form_wrapper")
  .field

    = assign.label :client
    / = assign.text_field :client
    -@clients.each do |client|
      .client_form_wrapper
        =client.name
        = assign.radio_button(:client_id, client.id, :class => "form_button")
    =link_to("New Client", clients_path, :class => "client_form_wrapper")
  .field

    = assign.label :role
    -@roles.each do |role|
      .role_form_wrapper
        =role.name
        = assign.radio_button(:role_id, role.id, :class => "form_button")
    =link_to("New Role", roles_path, :class => "role_form_wrapper")
    
       
  .field
    = assign.label :start_date
    = assign.date_field :start_date
  .field
    = assign.label :end_time
    = assign.date_field :end_time
  .actions
    = assign.submit 'Save'