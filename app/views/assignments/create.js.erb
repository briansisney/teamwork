

(function () {
  var assignmentHtml = "<%= j render(partial: 'clients/assignment', locals: {assignment: @assignment})%>";
  $('table').append(assignmentHtml);
  $('#new_assignment')[0].reset();
  $('.user_form_wrapper').removeClass('selected_role');
  $('.role_form_wrapper').removeClass('selected_role');
  $('.client_form_wrapper').removeClass('selected_role');
  <% last_role = Role.last %>
  <% if  last_role == @assignment.role &&  Time.now - last_role.created_at < 1 %>
    var roleHtml = "<%= j render(partial: 'assignments/newrole')%>"
    $(".original_roles").append(roleHtml);
  <% end %>
  

  
})();