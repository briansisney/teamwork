.row
  .col-md-12
    #title.pane
      %i.fa.fa-briefcase
      %h1 Clients
.row
  .clientlist
    - @clients.each do |client|
      .col-xs-12.col-lg-3.col-md-4.col-sm-4 
        =render 'clients/client', client: client
  .col-xs-12.col-lg-3.col-md-4.col-sm-4  
    .index-pane.pane{"data-toggle" => "modal", "data-target" => "#newClientModal"}
      %i.fa.fa-briefcase
      %h4 New Client
    =render 'clients/newclientmodal'

