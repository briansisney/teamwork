= form_for @assignment, remote: true do |assign|
  - if @assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment.errors.count, "error")} prohibited this assignment from being saved:"
      %ul
        - @assignment.errors.full_messages.each do |msg|
          %li= msg

  .field
  
    = assign.label :user
    / = assign.text_field :user
    
    -@users.each do |user|
      .user_form_wrapper
        %h6=user.name
        = assign.radio_button(:user_id, user.id, :class => "form_button")
  .field

    = assign.label :client
    / = assign.text_field :client
    -@clients.each do |client|
      .client_form_wrapper
        %h6=client.name
        = assign.radio_button(:client_id, client.id, :class => "form_button")
  .field

    = assign.label :role
    -@roles.each do |role|
      .role_form_wrapper
        .role_form_wrapper
          %h6=role.name
          = assign.radio_button(:role_id, role.id, :class => "form_button")
    .role_form_wrapper
      =link_to("New Role", roles_path)
    
       
  .field
    = assign.label :start_date
    = assign.datetime_select :start_date
  .field
    = assign.label :end_time
    = assign.datetime_select :end_time
  .actions
    = assign.submit 'Save'